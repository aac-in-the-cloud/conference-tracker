<style>
#content {
  max-width: 850px;
  margin: 30px auto;
}
h1 {
  text-align: center;
  margin-bottom: 5px;
  font-family: Arial;
}

input[type='text'] {
  border: 1px solid #888;
  border-radius: 3px;
  height: 50px;
  font-size: 20px;
  width: 350px;
}

</style>
<div id='content'>
  <h1>Session Search Results</h1>
  <% if @sessions.count == 0 %>
    <p>No results found</p>
  <% else %>
    <% @sessions.each do |session| %>
      <% conf = @conferences[session.conference_code] %>
      <img style='float: left; max-height: 100px; max-width: 150px; padding-bottom: 5px; border-radius: 5px;' src='/logo-<%= conf[:year] %>.png' onerror="this.src='/logo.png';"/>
      <%= session.resources['session_name'] %>
      <div style='white-space: nowrap; color: #888; overflow: hidden;'><%= session.resources['description'] %></div>
      <div style='clear: left;'></div>
    <% end %>
  <% end %>
</div>
